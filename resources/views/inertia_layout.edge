<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title inertia>AdonisJS x Inertia x React</title>

  @if(app.nodeEnvironment === "development")

  @viteReactRefresh()
  @inertiaHead()
  @vite(['resources/css/app.css', 'inertia/app/app.tsx', `inertia/pages/${page.component}.tsx`])
  @end

  @if(app.nodeEnvironment === "production")
  <link rel="stylesheet" href="/assets/app.css">
  <script src="/assets/app.js" defer></script>
  @end
</head>

<body>
  @inertia()

</body>

</html>